{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [],
        "exclude": ["node_modules","test"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "logoFile": "",
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
         },
       "dateFormat": "ddd MMM Do YYYY",
        "outputSourceFiles": true,
        "outputSourcePath": true,
        "systemName": "DocStrap",
        "footer": "",
        "copyright": "DocStrap Copyright Â© 2012-2015 The contributors to the JSDoc3 and DocStrap projects.",
        "navType": "vertical",
        "theme": "lumen",
        "linenums": true,
        "collapseSymbols": false,
        "inverseNav": true,
        "protocol": "html://",
        "methodHeadingReturns": false
    },
    "opts": {
        "template": "./node_modules/ink-docstrap/template",  // same as -t ./node_modules/ink-docstrap/template
        "encoding": "utf8",               // same as -e utf8
        "destination": "./doc_set/",          // same as -d ./out/
        "recurse": true                  // same as -r
        // "tutorials": "path/to/tutorials", // same as -u path/to/tutorials
    },
    "markdown": {
        "parser": "gfm",
        "hardwrap": true
    }
}

